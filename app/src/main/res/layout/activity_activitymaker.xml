        android:background="@drawable/facilitatorskill"/>

    <Button
        android:id="@+id/moduledevbtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainpage_btn_heights"
        android:background="@drawable/moduledevelopment"/>

    <Button
        android:id="@+id/sampleactdesignbtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mainpage_btn_heights"
        android:background="@drawable/sampleactivitiesdesign"/>

</LinearLayout>