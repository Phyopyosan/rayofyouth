<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#003e79"
        tools:context=".activities.CommunityActivity">
        <Button
            android:id="@+id/mycommunity"
            android:layout_width="match_parent"
            android:layout_marginTop="150dp"
            android:layout_height="@dimen/mainpage_btn_heights"
            android:background="@drawable/mycommunity"/>
        <Button
            android:id="@+id/aseancommunity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainpage_btn_heights"
            android:background="@drawable/aseancommunity"/>


    </LinearLayout>
</RelativeLayout>