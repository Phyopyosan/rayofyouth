<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#003e79"
            tools:context=".activities.MyselfActiviy">

            <Button
                android:id="@+id/selfawarenessbtn"
                android:layout_width="match_parent"
                android:layout_marginTop="90dp"
                android:layout_height="@dimen/mainpage_btn_heights"
                android:background="@drawable/selfawareness"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/lifeskillsbtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainpage_btn_heights"
                android:background="@drawable/lifeskills"/>
            <Button
                android:id="@+id/myfamilybtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainpage_btn_heights"
                android:background="@drawable/myfamily"/>


        </LinearLayout>
</RelativeLayout>