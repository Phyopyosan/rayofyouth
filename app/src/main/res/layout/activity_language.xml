<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#003e79"
    tools:context=".activities.LanguageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/font_size_small"
        android:layout_marginRight="@dimen/font_size_small"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/englangimg"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/englang" />
        <ImageView
            android:id="@+id/thailangimg"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/thailang" />

        <ImageView
            android:id="@+id/myanmarlangimg"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="2"
            app:srcCompat="@drawable/myanmarlang" />
    </LinearLayout>


</LinearLayout>